# Optional Email Config (if used)
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""

# Optional JWT Secret (if used)
JWT_SECRET=""

# Application Configuration
NEXT_PUBLIC_APP_NAME="Sistem Tahfidz"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Session Configuration
SESSION_MAX_AGE=86400

# WhatsApp Integration (for automated report sending)
# Provider: 'twilio' or 'messagebird'
WHATSAPP_PROVIDER="twilio"
WHATSAPP_SCHEDULE_TYPE="weekly" # 'weekly' or 'bi-weekly'

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID="replace-with-twilio-sid"
WHATSAPP_API_KEY="replace-with-twilio-auth-token"
WHATSAPP_PHONE_FROM="+62812345678"

# MessageBird Configuration (if using MessageBird)
# MESSAGEBIRD_API_KEY="replace-with-messagebird-key"

# Cron Job Security
CRON_SECRET_TOKEN="replace-with-random-secret-for-cron-verification"

# Auto-Deactivation Configuration (for graduated students)
# Grace period in days before deactivating graduated student and parent accounts
# Set to 0-1 in local/dev for quick testing, use 90 (or more) in production
GRACE_PERIOD_DAYS=90
